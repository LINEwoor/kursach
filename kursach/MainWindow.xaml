<Window x:Class="kursach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursach"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Canvas x:Name="ButtonCanvas">
        <Label x:Name="Score" Content ="Score: 0" FontSize="32" HorizontalAlignment="Left" Canvas.Top="42" VerticalAlignment="Center" Width="801"></Label>
        <Grid x:Name="GridLayout" Canvas.Top="100"/>
        <Canvas x:Name="ImageCanvas" Height="700" Width="800" Canvas.Top="100">
            <Canvas Height="800" Width="800"/>
        </Canvas>
        <ProgressBar x:Name="progressBar" Height="32" Canvas.Top="10" Width="801" HorizontalAlignment="Left" VerticalAlignment="Center" Value="100"/>
    </Canvas>
</Window>
